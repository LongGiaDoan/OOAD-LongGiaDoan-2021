<Window x:Class="WpfNotepad.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfNotepad"
        mc:Ignorable="d"
        Title="AboutWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image Source="images/Odisee_Logo.png" Height="113" HorizontalAlignment="Center" Margin="0,20,0,20"/>
            <Label Content="WPF notepad 1.0" HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center" FontSize="20" />
            <Button x:Name="btnClose" Content="Close" Width="70" HorizontalAlignment="Right" Margin="0,100,50,0" Click="Button_Click"   />

        </StackPanel>

    </Grid>
</Window>
